<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DiffusionView.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:DiffusionView"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid"
          KeyDown="MainGrid_KeyDown" 
          KeyUp="MainGrid_KeyUp"
          XYFocusKeyboardNavigation="Enabled"
          TabFocusNavigation="Cycle"
          IsTabStop="True"
          UseSystemFocusVisuals="False">

        <Grid.Resources>
            <Style x:Key="ScanProgressBarStyle" TargetType="ProgressBar">
                <Setter Property="Background" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
                <Setter Property="Height" Value="2"/>
                <Setter Property="IsIndeterminate" Value="False"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title bar -->
        <Grid Height="48" 
              Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*" 
                                  MinWidth="220"/>
                <ColumnDefinition Width="*" 
                                  MinWidth="48"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <FontIcon Grid.Column="1"
                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                      Glyph="&#xEB9F;"
                      FontSize="16"
                      VerticalAlignment="Center"
                      Margin="12,0,0,0"/>

            <TextBlock Text="Diffusion View"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       Style="{StaticResource CaptionTextBlockStyle}"/>

            <AutoSuggestBox x:Name="SearchBox"
                            Grid.Column="4" 
                            QueryIcon="Find"
                            PlaceholderText="Search"
                            VerticalAlignment="Center"
                            MaxWidth="600"
                            TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <!-- Navigation view -->
        <NavigationView x:Name="NavView" 
                        Grid.Row="1" 
                        IsSettingsVisible="False" 
                        PaneDisplayMode="Left" 
                        IsPaneOpen="True" 
                        ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Folders"
                                    Icon="Folder"
                                    MenuItemsSource="{x:Bind Folders}"/>
                <NavigationViewItem Content="Models"
                                    Icon="Contact" 
                                    MenuItemsSource="{x:Bind Models}"/>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Name="AddFolderButton" 
                                    Icon="Add" 
                                    Content="Add Folder"/>
            </NavigationView.FooterMenuItems>

            <Grid>
                <Grid.Resources>
                    <Style x:Key="PhotoSelectionCheckBoxStyle" TargetType="CheckBox">
                        <Setter Property="Background" Value="{ThemeResource SystemAltHighColor}"/>
                        <Setter Property="Foreground" Value="{ThemeResource SystemBaseHighColor}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource SystemBaseMediumColor}"/>
                        <Setter Property="MinWidth" Value="20"/>
                        <Setter Property="MinHeight" Value="20"/>
                        <Setter Property="UseSystemFocusVisuals" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CheckBox">
                                    <Grid x:Name="RootGrid" Background="Transparent">
                                        <Grid x:Name="CheckBoxBackground"
                                              Background="{ThemeResource SystemAltHighColor}"
                                              CornerRadius="4"
                                              Width="20" 
                                              Height="20">
                                            <FontIcon x:Name="CheckGlyph"
                                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Glyph="&#xE73E;"
                                                      FontSize="16"
                                                      Foreground="{ThemeResource SystemBaseHighColor}"
                                                      Opacity="0"/>
                                        </Grid>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CombinedStates">
                                                <VisualState x:Name="UncheckedNormal"/>
                                                <VisualState x:Name="UncheckedPointerOver"/>
                                                <VisualState x:Name="CheckedNormal">
                                                    <VisualState.Setters>
                                                        <Setter Target="CheckGlyph.Opacity" Value="1"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="CheckedPointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="CheckGlyph.Opacity" Value="1"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <ScrollViewer x:Name="GridView"
                              Padding="8,0,8,8"
                              Background="{ThemeResource CardStrokeColorDefaultBrush}">
                    <ItemsRepeater ItemsSource="{x:Bind Photos}">
                        <ItemsRepeater.Layout>
                            <local:PhotoGalleryLayout DesiredHeight="400" 
                                                      Spacing="4"/>
                        </ItemsRepeater.Layout>

                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="local:PhotoItem">
                                <Button x:Name="ImageButton" 
                                        Background="Transparent" 
                                        BorderThickness="0" 
                                        Padding="0" 
                                        Click="PhotoItem_Click" 
                                        DoubleTapped="PhotoItem_DoubleTapped">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Margin="4">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ContentPresenter"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                 To="1"
                                                                                 Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ContentPresenter"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                 To="1"
                                                                                 Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="PointerOver">
                                                            <VisualState.Setters>
                                                                <Setter Target="HoverBorder.Opacity" 
                                                                        Value="1"/>
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                        <VisualState x:Name="Pressed">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ContentPresenter"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                 To="0.95"
                                                                                 Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ContentPresenter"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                 To="0.95"
                                                                                 Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                            <VisualState.Setters>
                                                                <Setter Target="HoverBorder.Opacity" 
                                                                        Value="0.8"/>
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>

                                                <Grid x:Name="ContentPresenter"
                                                      RenderTransformOrigin="0.5,0.5">
                                                    <Grid.RenderTransform>
                                                        <ScaleTransform/>
                                                    </Grid.RenderTransform>

                                                    <Image Source="{Binding Thumbnail, Mode=OneWay}" 
                                                           Stretch="UniformToFill"/>
                                                    <Border x:Name="HoverBorder" 
                                                            Background="{ThemeResource SystemBaseLowColor}" 
                                                            Opacity="0"/>
                                                    <CheckBox x:Name="SelectionCheckBox"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Style="{StaticResource PhotoSelectionCheckBoxStyle}"
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Top"
                                                              Margin="8"/>
                                                </Grid>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <Grid x:Name="SinglePhotoView" 
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" 
                                          MinWidth="400"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="320" 
                                          MinWidth="200"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="8"
                                    Spacing="8">
                            <Button Click="BackToGridButton_Click">
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72B;"/>
                            </Button>

                            <ToggleButton x:Name="SelectionToggle"
                                          IsChecked="{x:Bind FocusedItem.IsSelected, Mode=TwoWay}" 
                                          Click="SelectionToggle_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE73E;"/>
                                </StackPanel>
                            </ToggleButton>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="PreviousButton"
                                    Grid.Column="0"
                                    Width="48"
                                    Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                    Opacity="0.7"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0"
                                    Click="PreviousButton_Click">
                                <FontIcon FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE76B;"
                                          FontSize="24"/>
                            </Button>

                            <Image x:Name="SinglePhotoImage"
                                   Grid.Column="1"
                                   Margin="48"
                                   Stretch="Uniform"/>

                            <Button x:Name="NextButton"
                                    Grid.Column="2"
                                    Width="48"
                                    Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                    Opacity="0.7"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    Click="NextButton_Click">
                                <FontIcon FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE76C;"
                                          FontSize="24"/>
                            </Button>
                        </Grid>
                    </Grid>

                    <controls:GridSplitter Grid.Column="1"
                                           Background="{ThemeResource SystemControlForegroundChromeMediumBrush}"
                                           Opacity="0.5"
                                           ResizeBehavior="PreviousAndNext"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Stretch"/>

                    <Grid x:Name="PropertiesPane"
                          Grid.Column="2" 
                          Margin="12">

                        <Grid.Resources>
                            <Style x:Key="SelectableTextStyle" 
                                   TargetType="TextBox">
                                <Setter Property="IsReadOnly" 
                                        Value="True"/>
                                <Setter Property="BorderThickness" 
                                        Value="0"/>
                                <Setter Property="Background" 
                                        Value="Transparent"/>
                                <Setter Property="TextWrapping" 
                                        Value="Wrap"/>
                                <Setter Property="Padding" 
                                        Value="0"/>
                                <Setter Property="MinHeight" 
                                        Value="0"/>
                            </Style>
                        </Grid.Resources>

                        <ScrollViewer>
                            <StackPanel Spacing="8" 
                                        Margin="0,0,8,12"
                                        HorizontalAlignment="Stretch">

                                <Expander IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">

                                    <Expander.Header>
                                        <TextBlock Text="File Information" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" 
                                                   Grid.Column="0" 
                                                   Text="File name:" />
                                        <TextBox Grid.Row="0" 
                                                 Grid.Column="1" 
                                                 Text="{x:Bind FocusedItem.FileName, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}" />

                                        <TextBlock Grid.Row="1" 
                                                   Grid.Column="0" 
                                                   Text="Path:" />
                                        <TextBox Grid.Row="1"
                                                 Grid.Column="1" 
                                                 Text="{x:Bind FocusedItem.FilePath, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0" 
                                                   Text="Last modified:" />
                                        <TextBox Grid.Row="2" 
                                                 Grid.Column="1" 
                                                 Text="{x:Bind FocusedItem.LastModified, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}" />

                                        <TextBlock Grid.Row="3" 
                                                   Grid.Column="0"
                                                   Text="Size:" />
                                        <TextBox Grid.Row="3" 
                                                 Grid.Column="1" 
                                                 Text="{x:Bind FocusedItem.FileSize, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}" />

                                        <TextBlock Grid.Row="4" 
                                                   Grid.Column="0" 
                                                   Text="Resolution:" />
                                        <TextBox Grid.Row="4" 
                                                 Grid.Column="1" 
                                                 Text="{x:Bind FocusedItem.Resolution, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}" />
                                    </Grid>
                                </Expander>

                                <Expander IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">

                                    <Expander.Header>
                                        <TextBlock Text="Prompts" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <StackPanel Spacing="8"
                                                Margin="0,8,0,0">
                                        <TextBlock Text="Positive prompt:" 
                                                   Style="{ThemeResource BodyTextBlockStyle}" />
                                        <TextBox Text="{x:Bind FocusedItem.Prompt, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}"
                                                 MinHeight="60"
                                                 AcceptsReturn="True" />

                                        <TextBlock Text="Negative prompt:" 
                                                   Style="{ThemeResource BodyTextBlockStyle}"
                                                   Margin="0,8,0,0" />
                                        <TextBox Text="{x:Bind FocusedItem.NegativePrompt, Mode=OneWay}"
                                                 Style="{StaticResource SelectableTextStyle}"
                                                 MinHeight="60"
                                                 AcceptsReturn="True" />
                                    </StackPanel>
                                </Expander>

                                <Expander x:Name="GenerationParametersExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="Generation Parameters" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid x:Name="GenerationParametersGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander x:Name="LorasExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="Loras" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid x:Name="LorasGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander x:Name="TextualInversionsExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="Textual Inversions" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid x:Name="TextualInversionsGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander x:Name="ADetailerParametersExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="ADetailer Parameters" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid x:Name="ADetailerParametersGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander x:Name="HiresParametersExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="Hires Parameters" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <Grid x:Name="HiresParametersGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander x:Name="AdditionalParametersExpander"
                                          IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <TextBlock Text="Additional Parameters" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>
                                    <Grid x:Name="AdditionalParametersGrid" 
                                          ColumnSpacing="12" 
                                          RowSpacing="8"
                                          Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Expander>

                                <Expander IsExpanded="True"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch">

                                    <Expander.Header>
                                        <TextBlock Text="Raw" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />
                                    </Expander.Header>

                                    <TextBox Text="{x:Bind FocusedItem.Raw, Mode=OneWay}"
                                             Style="{StaticResource SelectableTextStyle}" />
                                </Expander>

                                <StackPanel Orientation="Horizontal" 
                                            Spacing="8" 
                                            Margin="0,8,0,0">
                                    <Button Click="OpenButton_Click">
                                        <StackPanel Orientation="Horizontal" 
                                                    Spacing="8">
                                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                                      Glyph="&#xE8A7;"/>
                                            <TextBlock Text="Open" />
                                        </StackPanel>
                                    </Button>
                                    <Button Click="DeleteButton_Click">
                                        <StackPanel Orientation="Horizontal" 
                                                    Spacing="8">
                                            <FontIcon FontFamily="Segoe MDL2 Assets"
                                                      Glyph="&#xE74D;"/>
                                            <TextBlock Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </NavigationView>
    </Grid>
</Window>